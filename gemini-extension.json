{
  "name": "firestore-native",
  "version": "0.1.2",
  "description": "Connect and interact with Firestore databases, collections, and documents.",
  "mcpServers": {
    "firestore": {
      "command": "${extensionPath}${/}toolbox",
      "args": [
        "--prebuilt",
        "firestore",
        "--stdio"
      ]
    }
  },
  "contextFileName": "FIRESTORE-NATIVE.md",
  "settings": [
    {
      "name": "Project ID",
      "description": "ID of the Google Cloud project",
      "envVar": "FIRESTORE_PROJECT"
    },
    {
      "name": "Database ID",
      "description": "(Optional) ID of the Firestore database (Default: '(default)')",
      "envVar": "FIRESTORE_DATABASE"
    }
  ]
}
